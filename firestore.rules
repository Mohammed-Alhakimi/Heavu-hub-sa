rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isAdmin() {
      return isSignedIn() && getUserRole() == 'admin';
    }
    
    function isSellerOrAdmin() {
      return isSignedIn() && getUserRole() in ['dealer', 'admin'];
    }

    // 1. Users: Users can read profiles, but only edit their own
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId); // On sign up
      allow update: if isOwner(userId) && (
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']) || isAdmin()
      );
      allow delete: if false; // Only admin can delete via backend
      
      // User Favorites (Subcollection)
      match /favorites/{favoriteId} {
        allow read, write: if isOwner(userId);
      }
    }

    // 2. Listings: 
    // - Public can only read ACTIVE listings
    // - Admin can read ALL listings (for approval panel)
    // - Sellers create with 'pending' status
    // - Only admin can change status field
    match /listings/{listingId} {
      // Helper for listing validation
      function isValidListing(data) {
        return (data.name is string || data.title is string) &&
               data.make is string &&
               data.model is string &&
               data.year is int &&
               data.hours is int && data.hours >= 0 &&
               (!('weight' in data) || data.weight == null || data.weight is int || data.weight is float) &&
               (!('netPower' in data) || data.netPower == null || data.netPower is string) &&
               data.buyPrice is int && data.buyPrice >= 0 &&
               data.rentDaily is int && data.rentDaily >= 0 &&
               data.rentMonthly is int && data.rentMonthly >= 0;
      }

      // Public reads only active listings, admin can read all
      allow read: if resource.data.status == 'active' || isAdmin() || (isSignedIn() && resource.data.sellerId == request.auth.uid);
      
      // Sellers/admins can create (new listings are pending)
      allow create: if isSignedIn() && isSellerOrAdmin() && isValidListing(request.resource.data);
      
      // Updates: owner can update their own (except status), admin can update anything
      allow update: if isSignedIn() && (
        // Admin can update anything including status
        isAdmin() ||
        // Owner can update but NOT change status (unless it's their own listing going hidden/active)
        (resource.data.sellerId == request.auth.uid && 
          isValidListing(request.resource.data) &&
          (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['status']) ||
           request.resource.data.status in ['hidden', 'active'] && resource.data.status in ['active', 'hidden']))
      );
      
      // Delete: owner or admin
      allow delete: if isSignedIn() && (resource.data.sellerId == request.auth.uid || isAdmin());
    }

    // 3. Bookings: Any authenticated user can create, Renters/Sellers can read/update their own
    match /bookings/{bookingId} {
      allow create: if isSignedIn() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.userId != request.resource.data.sellerId;
      allow read: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.userId == request.auth.uid || resource.data.sellerId == request.auth.uid || isAdmin());
    }

    // 4. Offers: Authenticated users can create, Buyers/Sellers can read/update
    match /offers/{offerId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.buyerId == request.auth.uid || resource.data.sellerId == request.auth.uid);
      allow update: if isSignedIn() && (resource.data.buyerId == request.auth.uid || resource.data.sellerId == request.auth.uid);
    }

    // 4. Chats: Only participants can read/write
    match /chats/{chatId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow create: if isSignedIn(); // Any auth user can start chat
      allow update: if isSignedIn() && request.auth.uid in resource.data.participants;

      match /messages/{messageId} {
        allow read: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        allow create: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }

    // 5. Deletion Requests: 
    // - Users can create their own quest
    // - Users can read their own request
    // - Admin can read/update all
    match /deletionRequests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}
