rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload images under listings/
    match /listings/{listingId}/{fileName} {
      allow read: if true; // Public read for listing images
      allow write: if request.auth != null; // Authenticated users can upload
    }
    
    // Allow users to upload their own avatars
    match /avatars/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
